{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
